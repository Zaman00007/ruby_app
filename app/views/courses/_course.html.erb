<div id="<%= dom_id course %>" class="border border-gray-300 rounded-lg p-6 mb-6">
  <p class="my-5">
    <strong class="block font-medium mb-1 text-lg text-gray-800">Title:</strong>
    <%= course.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1 text-lg text-gray-800">Description:</strong>
    <%= course.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this course", course, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium text-gray-800" %>
    <%= link_to "Edit this course", edit_course_path(course), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium text-gray-800" %>
    <hr class="mt-6 border-t border-gray-300">
  <% end %>
</div>
